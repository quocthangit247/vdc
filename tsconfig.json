{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist/",
    "rootDir": "src",
    "baseUrl": "src",
    "incremental": true,
    "moduleResolution": "node",
    "composite": true
  },
  "include": ["microservices/**/src/**/*"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
